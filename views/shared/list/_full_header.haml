-# Header of table
.legend

	-# Stats
	%span.stat
		!= __('decoy::list.full_header.total')
		%span.badge=$count

	-# Potentially contain other buttons
	.pull-right.btn-toolbar

		-# Search togglers
		-if (!empty($search))
			.btn-group.search-controls.closed

				-# Search toggle
				%a.btn.btn-sm.outline.search-toggle
					.glyphicon.glyphicon-search

				-# Rest button
				%a.btn.btn-sm.outline.search-clear.js-tooltip(title="#{__('decoy::list.full_header.reset')}")
					.glyphicon.glyphicon-ban-circle

-# Search UI
!=View::make('decoy::shared.list._search', $__data)->render()
